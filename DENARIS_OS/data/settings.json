{
  "system_name": "DENARIS OS",
  "version": "0.1",
  "security_level": "high",
  "enable_net_watch": true,
  "net_watch": {
    "interval": 5,
    "limit": 500,
    "alert_on_new": true,
    "suspicious_ports": [22, 23, 3389],
    "whitelist_ips": ["127.0.0.1", "192.168.0.0/16"],
    "whitelist_domains": ["github.com", "microsoft.com", "cloudflare.com"],
    "alert_log": "logs/net_watch_alerts.log"
  },
  "integrity": {
    "hash_algo": "sha256",
    "manifest": "data/integrity_manifest.json"
  },
  "scheduler": {
    "enabled": true,
    "jobs": [
      {"name": "hourly_diag", "cron": "0 * * * *", "task": "core.scheduler:run_hourly_diag"}
    ]
  }
}
